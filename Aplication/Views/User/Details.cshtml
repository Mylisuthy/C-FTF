@model FirstMVC.Models.User

<h1>Lista de productos</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store">
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Name</label>
                        <input type="text" class="form-control" name="Nombre">
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Email</label>
                        <input type="text" class="form-control" name="Descripcion">
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary w-100">Guardar informaci√≥n</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>